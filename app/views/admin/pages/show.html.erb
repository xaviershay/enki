<h1><%= t('admin.pages.show.title', :link => link_to(h(@page.title), page_path(@page.slug)) ).html_safe %></h1>

<%= semantic_form_for([:admin, @page]) do |form| -%>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <%= form.actions do -%>
    <%= form.action :submit, :as => :button -%>
  <% end -%>
<% end -%>
