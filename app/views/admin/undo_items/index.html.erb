<% content_for(:head) do -%>
  <%= javascript_include_tag('admin/actions.js') %>
<% end -%>

<h1><%= t('admin.actions.index.title') %></h1>
<table>
  <thead>
    <th><%= t('admin.actions.index.date') %></th>
    <th><%= t('admin.actions.index.description') %></th>
    <th><%= t('admin.actions.index.action') %></th>
  </thead>

  <tbody>
  <% @undo_items.each do |undo_item| -%>
    <tr class="<%= cycle('', 'alt') %>">
      <td><%= undo_item.created_at.strftime('%d %b, %Y') %></td>
      <td><%= undo_item.description %></td>
      <td>
        <%= form_for(undo_item, :as => :undo_item, :url => undo_admin_undo_item_path(undo_item), :html => {:class => 'undo-item', :method => :post}) do |form| -%>
          <%= image_submit_tag("silk/arrow_undo.png", :alt => 'Undo') %>
        <% end -%>
      </td>
    </tr>
  <% end -%>
  </tbody>
</table>
