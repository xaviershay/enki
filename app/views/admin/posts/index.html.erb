<% content_for(:head) do -%>
  <%= javascript_include_tag('admin/posts.js') %>
<% end -%>

<h1><%= t('admin.posts.index.title') %></h1>
<table>
  <thead>
    <tr>
      <th><%= t('admin.posts.index.published_at') %></th>
      <th><%= t('admin.posts.index.title_header') %></th>
      <th><%= t('admin.posts.index.excerpt') %></th>
      <th><%= t('admin.posts.index.comments') %></th>
      <th><%= t('admin.posts.index.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% if @posts.empty? -%>
      <tr><td colspan="5"><%= t('admin.posts.index.no_posts') %></td></tr>
    <% else -%>
      <%= render :partial => 'post', :collection => @posts %>
    <% end -%>
  </tbody>

  <tfoot>
    <% if @posts.total_pages > 1 -%>
      <tr class="pagination">
        <td colspan="5">
          <%= will_paginate(@posts, :previous_label => t('plugins.will_paginate.previous_label'), :next_label => t('plugins.will_paginate.next_label')) %>
        </td>  
      </tr>
    <% end -%>
  </tfoot>
</table>
